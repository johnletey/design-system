{
  "name": "unified-ui",
  "version": "0.0.2-7",
  "description": "unified design system and component library",
  "license": "MIT",
  "keywords": [
    "process",
    "design",
    "system",
    "rehype",
    "retext",
    "remark"
  ],
  "homepage": "http://unified.js.org",
  "repository": "unifiedjs/design-system",
  "bugs": "https://github.com/unifiedjs/design-system/issues",
  "author": "John Otander <johnotander@gmail.com> (http://johnotander.com)",
  "contributors": [
    "John Otander <johnotander@gmail.com> (http://johnotander.com)",
    "Titus Wormer <tituswormer@gmail.com> (https://wooorm.com)"
  ],
  "main": "dist/index.js",
  "module": "src/index.js",
  "files": [
    "dist",
    "src"
  ],
  "dependencies": {
    "@mdx-js/tag": "^0.15.0",
    "styled-components": "^4.0.2",
    "styled-system": "^3.1.11"
  },
  "devDependencies": {
    "@compositor/kit": "^1.0.47",
    "@compositor/x0": "^6.0.7",
    "babel-cli": "^6.26.0",
    "babel-eslint": "^10.0.1",
    "babel-preset-env": "^1.7.0",
    "babel-preset-react": "^6.24.1",
    "babel-preset-stage-0": "^6.24.1",
    "eslint-config-xo-react": "^0.17.0",
    "eslint-plugin-react": "^7.11.1",
    "prettier": "^1.14.3",
    "remark-cli": "^6.0.0",
    "remark-preset-wooorm": "^4.0.0",
    "xo": "^0.23.0"
  },
  "scripts": {
    "build": "babel src -d dist",
    "format": "remark . -qfo && prettier \"**/*.js\" --write && xo --fix",
    "start": "x0 docs",
    "test": "npm run format && npm run build"
  },
  "prettier": {
    "tabWidth": 2,
    "useTabs": false,
    "singleQuote": true,
    "bracketSpacing": false,
    "semi": false,
    "trailingComma": "none"
  },
  "xo": {
    "prettier": true,
    "extends": [
      "xo-react"
    ],
    "parser": "babel-eslint",
    "rules": {
      "import/no-extraneous-dependencies": "off",
      "unicorn/filename-case": "off"
    }
  },
  "remarkConfig": {
    "plugins": [
      "preset-wooorm"
    ]
  },
  "x0": {
    "title": "unified design system"
  }
}
